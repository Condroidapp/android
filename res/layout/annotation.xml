<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_height="fill_parent" android:layout_width="fill_parent" android:orientation="vertical">
    <LinearLayout android:background="@drawable/textlines" android:layout_width="fill_parent" android:padding="5dp" android:id="@+id/linearLayout3" android:orientation="vertical" android:layout_height="wrap_content">
        <TextView android:id="@+id/annot_title" android:textStyle="bold" android:layout_height="wrap_content" android:paddingBottom="2dp" android:textSize="18dp" android:layout_width="fill_parent" android:text="TextView"></TextView>
        <FrameLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/frameLayout1">
            <ImageView android:src="@drawable/program_unknown" android:layout_gravity="right|center_vertical" android:padding="5dp" android:id="@+id/iProgramIcon" android:layout_width="wrap_content" android:layout_height="wrap_content"></ImageView>
            <LinearLayout android:id="@+id/linearLayout1" android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="vertical">
                <TextView android:id="@+id/annot_author" android:layout_height="wrap_content" android:paddingBottom="2dp" android:textSize="16dp" android:layout_width="fill_parent" android:text="TextView"></TextView>
                <TextView android:id="@+id/annot_location" android:layout_height="wrap_content" android:textSize="16dp" android:layout_width="wrap_content" android:text="TextView"></TextView>
                <TextView android:textColor="@color/gray" android:id="@+id/annot_time" android:layout_height="wrap_content" android:textSize="16dp" android:layout_width="fill_parent" android:text="TextView"></TextView>
                <LinearLayout android:layout_width="fill_parent" android:id="@+id/linearLayout4" android:layout_height="wrap_content">
                    <TextView android:textColor="@color/gray" android:id="@+id/annot_pid" android:layout_height="wrap_content" android:layout_width="wrap_content"></TextView>
                    <TextView android:textColor="@color/gray" android:id="@+id/annot_line" android:layout_height="wrap_content" android:layout_width="wrap_content"></TextView>
                    <TextView android:textColor="@color/gray" android:id="@+id/annot_type" android:layout_height="wrap_content" android:layout_width="wrap_content" android:inputType="text"></TextView>
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent" android:id="@+id/linearLayout6" android:orientation="vertical" android:layout_height="0dp" android:layout_weight="8">
        <LinearLayout android:layout_width="fill_parent" android:padding="5dp" android:id="@+id/linearLayout2" android:layout_height="wrap_content" android:orientation="vertical">
            <TextView android:id="@+id/annot_text" android:layout_height="fill_parent" android:textSize="15dp" android:layout_width="fill_parent" android:text="TextView" android:lineSpacingExtra="7dp" android:scrollbars="vertical"></TextView>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent" android:id="@+id/linearLayout5" android:layout_weight="1" android:layout_height="0dp" android:background="@drawable/textlines">
        <ImageView android:src="@android:drawable/ic_menu_share" android:id="@+id/imageView1" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_weight="1"></ImageView>
        <ImageView android:src="@android:drawable/ic_menu_my_calendar" android:id="@+id/imageView2" android:layout_height="fill_parent" android:layout_width="fill_parent" android:layout_weight="1"></ImageView>
        <ImageView android:src="@android:drawable/star_off" android:id="@+id/imageView3" android:layout_width="fill_parent" android:layout_weight="1" android:layout_height="fill_parent"></ImageView>
    </LinearLayout>


</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        android:layout_height="fill_parent" android:layout_width="fill_parent" android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:background="@drawable/gradient_second_line" android:layout_width="fill_parent"
                  android:id="@+id/linearLayout3" android:orientation="horizontal"
                  android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="horizontal" android:layout_weight="1" android:gravity="left|center_vertical" android:paddingLeft="5dp" android:paddingBottom="5dp" android:paddingTop="5dp">

            <ImageView
                android:id="@+id/iLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/logo" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.93"
            android:gravity="right|center_vertical" >

            <ImageButton
                android:id="@+id/ibFilter"
                style="@style/ButtonText"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:background="@drawable/style_greenbutton"
                android:src="@drawable/filter_small" android:padding="8dp"/>


            <ImageButton
                android:id="@+id/ibSearch"
                style="@style/ButtonText"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:background="@drawable/style_greenbutton"
                android:src="@drawable/search_small" android:padding="8dp"/>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
            android:id="@+id/LinearLayout01"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_top_line"
            android:orientation="vertical"
            android:padding="0dp">


        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">


            <FrameLayout
                android:id="@+id/fRunning"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:clickable="true" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/clock_icon" android:paddingTop="4dp"/>

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="@string/tRunning"
                    android:textColor="@color/lightgray" 
                    android:gravity="center_vertical|center_horizontal" 
                    android:paddingTop="25dp" 
                    android:textSize="11dp" 
                    android:paddingBottom="5dp"/>

            </FrameLayout>


            <FrameLayout
                android:id="@+id/fAll"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:clickable="true" >

                <ImageView
                    android:id="@+id/ImageView01"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="5px"
                    android:src="@drawable/list_icon" />

                <TextView
                    android:id="@+id/TextView03"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:textColor="@color/lightgray" 
                    android:gravity="center_vertical|center_horizontal" 
                    android:paddingTop="25dp" 
                    android:textSize="11dp" 
                    android:paddingBottom="5dp"
                    android:text="@string/tAll"/>
            </FrameLayout>


            <FrameLayout
                android:id="@+id/fTwitter"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:clickable="true" android:visibility="gone" >

                <ImageView
                    android:id="@+id/ImageView02"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="5px"
                    android:src="@drawable/twitter" />

                <TextView
                    android:id="@+id/TextView04"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:textColor="@color/lightgray" 
                    android:gravity="center_vertical|center_horizontal" 
                    android:paddingTop="25dp" 
                    android:textSize="11dp" 
                    android:paddingBottom="5dp"
                    android:text="@string/tTwitter" />

            </FrameLayout>


        </LinearLayout>

    </LinearLayout>





    <LinearLayout
        android:id="@+id/llListView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="8"
        android:orientation="vertical" >




        <TextView
            android:id="@+id/tFilterStatus"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:text="Small Text"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:background="@drawable/filter_status" android:layout_margin="5dp" android:padding="3dp"
                android:visibility="gone"/>

        <ListView
            android:id="@+id/lwMain"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">
        </ListView>

        <LinearLayout
            android:id="@+id/tNoData"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="gone" >

            <TextView
                android:id="@+id/tNoDataText"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="@string/tNoData"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
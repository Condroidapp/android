<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        android:layout_height="fill_parent" android:layout_width="fill_parent" android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:background="@drawable/gradient_second_line" android:layout_width="fill_parent"
                  android:id="@+id/linearLayout3" android:orientation="vertical"
                  android:layout_height="wrap_content" android:padding="8dp">
        <ImageView android:id="@+id/iLogo" android:src="@drawable/logo" android:layout_width="wrap_content"
                   android:layout_height="wrap_content"></ImageView>
    </LinearLayout>


    <LinearLayout
            android:id="@+id/LinearLayout01"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gradient_top_line"
            android:orientation="vertical"
            android:padding="0dp">


        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">


            <FrameLayout
                android:id="@+id/fRunning"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:clickable="true" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/clock_icon" android:paddingTop="4dp"/>

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="@string/tRunning"
                    android:textColor="@color/lightgray" 
                    android:gravity="center_vertical|center_horizontal" 
                    android:paddingTop="22dp" 
                    android:textSize="10dp" 
                    android:paddingBottom="4dp" 
                    android:textStyle="bold"/>

            </FrameLayout>


            <FrameLayout
                android:id="@+id/fAll"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:clickable="true" >

                <ImageView
                    android:id="@+id/ImageView01"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="5px"
                    android:src="@drawable/list_icon" />

                <TextView
                    android:id="@+id/TextView03"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:textColor="@color/lightgray" 
                    android:gravity="center_vertical|center_horizontal" 
                    android:paddingTop="22dp" 
                    android:textSize="10dp" 
                    android:paddingBottom="4dp" 
                    android:textStyle="bold"
                    android:text="@string/tAll" />
            </FrameLayout>


            <FrameLayout
                android:id="@+id/fTwitter"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:clickable="true" >

                <ImageView
                    android:id="@+id/ImageView02"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="5px"
                    android:src="@drawable/twitter" />

                <TextView
                    android:id="@+id/TextView04"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:textColor="@color/lightgray" 
                    android:gravity="center_vertical|center_horizontal" 
                    android:paddingTop="22dp" 
                    android:textSize="10dp" 
                    android:paddingBottom="4dp" 
                    android:textStyle="bold"
                    android:text="@string/tTwitter" />
            </FrameLayout>


        </LinearLayout>

    </LinearLayout>

    <LinearLayout android:layout_width="fill_parent" android:id="@+id/linearLayout6" android:orientation="vertical"
                  android:layout_height="0dp" android:layout_weight="8">

        <ListView
                android:id="@+id/lwRunning"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
        </ListView>
        <ListView
                android:id="@+id/lwAll"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:visibility="gone">
        </ListView>
        <ListView
                android:id="@+id/lwTwitter"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:visibility="gone">
        </ListView>


    </LinearLayout>


</LinearLayout>
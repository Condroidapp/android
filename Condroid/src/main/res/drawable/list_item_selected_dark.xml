<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- focused -->
    <item android:state_focused="true" android:drawable="@color/darkgray" />
    <!-- focused and pressed-->
    <item android:state_focused="true" android:state_pressed="true" android:drawable="@color/darkgray" />
    <!-- pressed -->
    <item android:state_pressed="true" android:drawable="@color/darkgray" />
    <!-- default -->
    <item android:drawable="@color/almost_black" />
</selector>
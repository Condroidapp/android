<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@color/lightgray"/>
            <solid android:color="@color/drawer"/>
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@color/drawer"/>
            <solid android:color="@color/drawer"/>
        </shape>
    </item>
</layer-list>